{
  "sass": {
	"src": "public/css/style.scss",
	"dest": "public/css/style.css"
  },
  "uglify": {
	"src": "dist/js/app.js",
	"dest": "dist/js/app.min.js"
  },
  "cssmin": {
	"src": "dist/css/style.css",
	"dest": "dist/css/style.min.css"
  },
  "concat": {
	"js": "dist/js/app.js",
	"css": "dist/css/style.css"
  },
  "replace": {
	"fix_css_sourcemap": {
	  "src": "dist/css/style.min.css.map",
	  "from": "dist/css/style.css",
	  "to": "style.css"
	}
  },
  "index.html": {
	"src": "public/index.html",
	"dest": "dist/index.html",
	"prod": {
	  "css": {
		"min": { "value": "css/style.min.css" }
	  },
	  "js": {
		"min": { "value": "js/app.min.js" }
	  }
	},
	"dev": {
	  "css": {
